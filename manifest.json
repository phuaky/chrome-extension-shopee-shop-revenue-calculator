{
  "manifest_version": 3,
  "name": "Shop Revenue Display",
  "version": "1.0",
  "description": "Display monthly revenue for shops on Shopee",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://sg.xiapibuy.com/*",
    "https://shopee.sg/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://sg.xiapibuy.com/*",
        "https://shopee.sg/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png"
    }
  },
  "icons": {
    "48": "icon.png"
  }
}